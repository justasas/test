<p>
  <strong>Title:</strong>
  <%= @topic.title %>
</p>

<h2>Replies</h2>
<%= render @topic.replies %>

<h2>Add a reply:</h2>
<% if session[:user_id] %>
  <%= form_for([@topic, @topic.replies.build]) do |f| %>
    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
<% else %>
  <%= link_to 'log in', url_for(:controller => :session, :action => :new) %>
  if you want to reply <br></br>
<% end %>
<%= link_to 'Back', topics_path %>
| <%= link_to 'Edit', edit_topic_path(@topic) %>
